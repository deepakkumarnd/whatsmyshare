<div class="debtor">
  <div class="flex gap-2">
    <%= f.input :name, input_html: { class: "input-text m-2", placeholder: "Debtor name eg: Deepak" } %>
  </div>
  <div class="p-2 flex justify-end">
    <%= f.input :_destroy, as: :hidden, label: "Delete", input_html: { class: "input-check mr-2 delete-debtor-input" } %>
    <%= link_to "Delete", "javascript:void(0);", class: "link", data: { action: "click->expense-form#removeDebtor" } %>
  </div>
</div>
