
<%= simple_form_for(expense_group, url: submit_url, method: http_method) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="box">
    <%= f.input :description, placeholder: "Example: Varkala trip expenses", input_html: { class: "input-text my-2" } %>
  </div>

  <div class="box flex gap-2 items-center">
    <% button_text = expense_group.new_record? ? "Create group" : "Update group" %>
    <%= f.button :submit, button_text,class: "btn btn-primary"  %>
    <%= link_to "Cancel", cancel_link, class: "link" %>
  </div>
<% end %>
